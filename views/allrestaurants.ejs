<link rel="stylesheet"href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<meta name="viewport" content="width=device-width, initial-scale=1">
<style>
body
	{
		width:100%;
		padding:0;
		margin:0;
		box-sizing:border-box;
		font-family:Lobster, cursive;
	}
	.constnav ul
	{
		margin:0;
		background-color:#AAF200;
		color:black
		color:white;
	/*background-image:linear-gradient(to right, rgb(17, 153, 142), rgb(56, 239, 125));*/
 		height:8vh;
		padding:2px;
		border-radius:0 0 5px 5px;
	}
	.constnav ul li{
		position:relative;
		font-size:125%;
		margin:0 20px;
		list-style:none;
		float:right;
		padding:0 0.5vw;
		top:50%;
		transform:translateY(-50%);		
	}
	.constnav ul li a
	{
		color:black;
		text-decoration:none;
	}
	.constnav ul li:hover
	{
		color:yellow;		
	}
	.constnav ul li a:hover
	{
		color:yellow;		
	}
	.whole
	{
		position:relative;
		font-family:'Lobster', cursive;
		width:80%;
		margin:15px auto;
		padding-bottom:10px;
	}
	.singlerestaurant
	{
		width:96%;
		border-radius:10px;
		padding:10px;
		margin:2%;
		overflow:hidden;
		text-align:center;
		display:inline-block;
		vertical-align:top;
	}
	/*For tablets*/
	@media only screen and (min-width: 600px) 
	{.singlerestaurant
		{width:45.5%;}
	}
	/*For desktop*/
	@media only screen and (min-width: 769px) 
	{.singlerestaurant
		{width:21%;}
	}
	.jumbotron{
		text-align:center;
		font-size:120%;
		color:black;
		text-shadow:1px 1px 4px red;
		background-color: #b8c6db;
background-image: linear-gradient(315deg, #b8c6db 0%, #f5f7fa 74%);
	}
</style>
<%- include("partial/header") -%>
<div class="whole">
	<div>
		<%if(restaurants.length<1){%>
			<p>No outlet available in your location now!</p>			
		<%}else{%>
		<div class="jumbotron">
		Unveil the restaurants available in <%=location%>
		</div>
			<%for(var i=0;i<restaurants.length;i++){%>
				<div class='singlerestaurant'>
					<p><%=restaurants[i].restaurantName%></p>
					<p><%=restaurants[i].restaurantLocation%></p>
					<p>Time- <%=restaurants[i].restaurantTiming%></p>
					<p>Reach us @<%=restaurants[i].restaurantPhone%></p>
					<a href="/singleresdetails/<%=restaurants[i]._id%>">View more..</a>
				</div>	
			<%}%>						  
		<%}%>		
	</div>
</div>	


<script>
	let restaurants=document.querySelectorAll('.singlerestaurant');
	altbackgroundcolors();
	function altbackgroundcolors()
	{
		for (var i=0;i<restaurants.length;i++)
		{
			var bc1r=Math.floor(Math.random()*255);
			var bc1g=Math.floor(Math.random()*255);
			var bc1b=Math.floor(Math.random()*255);
			var bc2r=bc1r+50;
			var bc2g=bc1g+50;
			var bc2b=bc1b+50;
			randbackcolor1="rgb("+bc1r+", "+bc1g+", "+bc1b+")";
			randbackcolor2="rgb("+bc2r+", "+bc2g+", "+bc2b+")";
			restaurants[i].style.backgroundImage="linear-gradient(to bottom,"+ randbackcolor1+","+ randbackcolor2+")";
		}
	}
</script>