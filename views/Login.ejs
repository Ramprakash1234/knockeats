<html>
<head>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<link rel="stylesheet"href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
<link href="https://fonts.googleapis.com/css2?family=Lobster&family=Lobster+Two&display=swap" rel="stylesheet">

<!--=====================styles=====================================!-->

<style>
body
{
	margin:0;
	padding:0;
	box-sizing:border-box;
	width:100vw;
}
.wholediv
{
background-color: #0093E9;
background-image: linear-gradient(160deg, #0093E9 0%, #80D0C7 100%);
	height:100vh;
	width:100vw;
	position:relative;
}
.content
{
	top:50%;
	left:50%;
	transform:translate(-50%,-50%);
	padding:0;
	margin:0;
	background-color:transparent;
	position:relative;
	display:inline-block;
	vertical-align: top;
	font-size:100%;
	width:30%;
	height:100%;
	text-align:center;
}
#cLoginForm
{
	background-color: #b8c6db;
background-image: linear-gradient(315deg, #b8c6db 0%, #f5f7fa 74%);
	width:100%;
	background-color:yellow;
	position:absolute;
	top:50%;
	left:50%;
	transform:translate(-50%,-50%);	
	border-radius:5%;
}
.fa-users
{
	margin:10% 0;	
}
.inputdiv
{
	width:70%;
	position:relative;
	display:inline-block;
}
.fa-user
{
	position:absolute;
	top:50%;
	transform:translatey(-50%);
	left:5px;
}	
input[type=text], select, input[type=password]
{
	border:0;
	border-bottom:1px solid black;
	outline:none;
	margin:5% auto;
 	width:100%;
	display:block;
	background-color:transparent;
	padding-left:30px;
}
select{padding:0;}
	
.fa-lock
{
	position:absolute;
	top:50%;
	transform:translatey(-50%);
	left:5px;
}	
#logbtndiv,a
{
	width:70%;
	position:relative;
	display:inline-block;
	margin-bottom:3%;
}
input[type=submit]
{
	margin:12% auto 2% auto;
 	width:100%;
	display:block;
	outline:none;
	border:0;
	border-radius:10px;
	background-color: #0093E9;
background-image: linear-gradient(160deg, #0093E9 0%, #80D0C7 100%);
	border-radius:5px;
	color:black;
	padding:2% 0;
}
	#errordiv{
		width:100%;
		padding:10px 0;
		text-align:center;
		background-color:rgb(230,0,0);
		color:white;
	}
	body::-webkit-scrollbar 
	{
	  display: none;
	}
</style>
</head>

<!--======================Coding====================================!-->
<%if(status){%>
		<div id="errordiv"><i class="fa fa-warning " ></i> <%=status%></div>	
	<%}%>
	<div class="wholediv">
	<div class="content">
			<form id="cLoginForm" action="/Login" method="POST" autocomplete="off">
				<i class="fa fa-users fa-5x" style="display:block;" aria-hidden="true"></i>
				<div class="inputdiv">
					<select name="typeofuser" style="width:100%;">
						<option>Customer</option>
						<option>Restaurant</option>
					</select>
				</div>	
				<div class="inputdiv">
					<input id="un" name="username" type="text" 			   							placeholder="Username">
					<i class="fa fa-user fa-lg" aria-hidden="true"></i>
				</div>
				<div class="inputdiv">
				<input id="pw" name="password" type="password" 										placeholder="Password">
				<i class="fa fa-lock fa-lg"></i>
				</div>
				<div id="logbtndiv">
				<input type="submit" value="Login">
					<a id="registerredirect" style="cursor:pointer;color:purple">New to knockeats?</a>
				</div>
			</form>
		</div>
	</div>


<!--======================Scripts====================================!-->
<script rel="text/javascript">
</script>	
	<script>
		var registerredirect=document.querySelector("#registerredirect"),
		typeofuser=document.querySelector("select");
		registerredirect.addEventListener("click",function(){
			if(typeofuser.options[typeofuser.selectedIndex].value=="Customer"){
				registerredirect.setAttribute("href","/cusregister");
				registerredirect.click();
			}else{
				registerredirect.setAttribute("href","/resregister");
				registerredirect.click();
			}
		})
	</script>