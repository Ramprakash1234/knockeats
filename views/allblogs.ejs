<!Doctype Html>
<html>
 <head>
<title>My blog site</title> 
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" >
<style>
	
.jumbotron
{
	background-color:#eaeae1;
	margin-top:10px;
}
.form
{
	box-shadow:5px 1px 5px black;
}
form input
{
	display:block;
}
.container .singleblog
{
	border:2px solid black;
} 
	.constnav ul
	{
		margin:0;
		/*background-color:#AAF200;*/
		background-color:rgb(50,50,50);
	/*background-image:linear-gradient(to right, rgb(17, 153, 142), rgb(56, 239, 125));*/
 		height:8vh;
		padding:2px;
		border-radius:0 0 5px 5px;
	}
	.constnav ul li{
		position:relative;
		font-size:126%;
		margin:0 20px;
		list-style:none;
		float:right;
		padding:0 0.5vw;
		top:50%;
		transform:translateY(-50%);		
	}
	.constnav ul li a
	{
		color:white;
		text-decoration:none;
	}
	.constnav ul li:hover
	{
		color:#AAF200;		
	}
	.constnav ul li a:hover
	{
		color:#AAF200;		
	}
	#statusdiv{
		width:100%;
		padding:10px 0;
		text-align:center;
		background-color:rgb(0,230,0);
		color:white;
	}
	 </style>								</head>
<body>
	<%if(status){%>
		<div id="statusdiv"><i class="fa fa-check" aria-hidden="true"></i> <%=status%></div>	
	<%}%>
	<%- include("partial/header") -%>
	
<%if (blogs.length<1){%>
<div class="jumbotron" style="text-align:center;">No articles available!
			</div>				 
<%}
else{%>
	
<div style="width:70%;margin:0 auto;">
	<div class="jumbotron">
		<h1><span><svg class="bi bi-laptop" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M13.5 3h-11a.5.5 0 0 0-.5.5V11h12V3.5a.5.5 0 0 0-.5-.5zm-11-1A1.5 1.5 0 0 0 1 3.5V12h14V3.5A1.5 1.5 0 0 0 13.5 2h-11z"/>
  <path d="M0 12h16v.5a1.5 1.5 0 0 1-1.5 1.5h-13A1.5 1.5 0 0 1 0 12.5V12z"/>
</svg></span> Knockeats blog</h1>
		<p>page name says everything</p>
		<a id="newbloglink" href="/blogs/new/">New Blog</a>
	</div>
	<div class="row" style="display:flex;margin:0rem 0.5rem;">
		<%for (var i=0;i<blogs.length;i++){%>
			<div class="single" style="border-radius:2%;box-sizing:border-box;overflow:hidden;height:15rem;width:23.2%;border:1px solid black;text-align:center;padding:0.5rem;margin:0.5rem;word-wrap:wrap;">
				<h5><%=blogs[i].title%></h5>
				<img src="<%=blogs[i].image%>" class="img-thumbnail" style="height:65%;width:90%;margin-bottom:1rem;">
				<p><a href="/blogs/<%=blogs[i]._id%>" class="btn btn-info btn-sm">View more...</a></p>
			</div>								  
		<%}%>	
	</div>
</div>
<%}%>
<script>
var posts=document.querySelectorAll(".single");
var colours=[];
var n=posts.length;
assign(n);
for(var i=0;i<posts.length;i++){
	posts[i].style.backgroundColor=colours[i];
}
function assign(n){
	for(var j=0;j<n;j++){
		var r=180+Math.floor(Math.random()*76);
		var g=180+Math.floor(Math.random()*76);
		var b=180+Math.floor(Math.random()*76);
		var colour="rgb(" + r +", " + g + ", " + b + ")";
		colours.push(colour);
	}
}
</script>


